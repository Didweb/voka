{% extends '@frontend_office/base-admin.html.twig' %}



{% block body %}
    <div class="text-center">
        {% for key, value  in app.session.flashbag.all %}
            <div class="card border-left-{{  key }} shadow h-100 py-2 mb-3" >
                <div class="card-body">
                    {{  value[0] | raw }}
                </div>
            </div>
        {% endfor %}
    </div>

    {{ form_start(form) }}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add A New Category ... </h6>
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="col">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, { 'attr': {'placeholder': 'Add a new category' , 'value': ''}}) }}
                </div>
            </div>
        </div>
        {{ form_widget(form) }}

        <div class="text-center mb-3">
            <button class="btn btn-success btn-icon-split ">
      <span class="icon text-white-50">
        <i class="fas fa-check"></i>
      </span>
                <span class="text">Create</span>
            </button>
        </div>

    </div>
    {{ form_end(form) }}
    <div class="text-center">
        <a href="{{ url('frontend.backoffice.listAllCategories') }}"
           class="btn btn-primary ml-5">Back to the list of categories</a>
    </div>
    {% endblock %}
